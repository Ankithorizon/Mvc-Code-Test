@model MvcCodeTestLib.User_List_AddNew


<div>
    # : @Model.NewUser.Id
</div>
<div>
    Name : @Model.NewUser.Name
</div>
<div>
    Address : @Model.NewUser.Address
</div>
<div>
    <hr />
</div>
<div>
    <form id="userForm"
          name="userForm"
          asp-action="FormSubmit">

        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly"
             class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.NewUser.Name"
                   class="control-label">
            </label>
            <input asp-for="@Model.NewUser.Name"
                   id="Name"
                   name="Name"
                   placeholder="name - ?"
                   class="form-control" />
            <span asp-validation-for="@Model.NewUser.Name"
                  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.NewUser.Address" 
                   class="control-label"></label>
            <input asp-for="@Model.NewUser.Address"
                   id="Address"
                   name="Address"
                   placeholder="address - ?"
                   class="form-control" />
            <span asp-validation-for="@Model.NewUser.Address"
                  class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <button type="button"
                    class="btn btn-primary newUserBtn">
                New User
            </button>
        </div>
    </form>
</div>